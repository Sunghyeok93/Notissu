<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.preference.PreferenceCategory
        android:title="기능 설정">
        <android.support.v7.preference.Preference
            android:key="pf_folder_display_option"
            android:title="@string/setting_title_update_period">
            <intent
                android:targetClass="com.notissu.Activity.UpdatePeriodActivity"
                android:targetPackage="com.notissu" />
        </android.support.v7.preference.Preference>

        <android.support.v7.preference.Preference
            android:title="@string/setting_title_delete_keyword">
            <intent
                android:targetClass="com.notissu.Activity.DeleteKeywordActivity"
                android:targetPackage="com.notissu" />
        </android.support.v7.preference.Preference>

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="앱">
        <android.support.v7.preference.Preference
            android:title="@string/setting_title_with_us">
            <intent
                android:targetClass="com.notissu.WithUs.WithUsActivity"
                android:targetPackage="com.notissu" />
            </android.support.v7.preference.Preference>

        <android.support.v7.preference.Preference
            android:title="@string/setting_title_about_libraries">
            <intent
                android:targetClass="com.notissu.AboutLibraries.AboutLibrariesActivity"
                android:targetPackage="com.notissu" />
        </android.support.v7.preference.Preference>

        <android.support.v7.preference.Preference
            android:title="@string/setting_title_send_email"
            android:summary="문의사항이 있으면 연락주세요~^^" >
            <intent
                android:action="android.intent.action.SENDTO"
                android:data="mailto:1004xlsrn@gmail.com" />
        </android.support.v7.preference.Preference>
    </android.support.v7.preference.PreferenceCategory>
</android.support.v7.preference.PreferenceScreen>